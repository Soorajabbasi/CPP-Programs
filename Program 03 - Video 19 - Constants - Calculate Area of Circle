#include<iostream>
//#define PI 3.14 
using namespace std;
int main (){

	// How to calculate area of circle 
	//Pi=3.14;
	// a=pi(rxr)
	const float PI=3.14;
	float radius,area;
	cout<<"Insert Radius of Circle"<<endl;
	cin>>radius;
	area = PI*radius*radius;
	cout<<"Area of a circle is:"<<area;


return 0;

}
